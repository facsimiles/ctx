//!picoc
#include "ui.h"

int main(int argc, char **argv) {
  FILE *fin = stdin;
  FILE *fout = stdout;
  char word[4];
  int wordlen = 0;
  argv[argc] = NULL;
  if (argc > 1) {
    if (!strcmp(argv[1], "-")) {
    } else
      fin = fopen(argv[1], "rb");
  }

  int word_count = 0;

  if (fin) {
    unsigned char buf[512];
    int read;
    do {
      read = fread(buf, 1, 512, fin);
      if (read) {
        for (int i = 0; i < read; i++) {
          if (((buf[i] >= 32) && (buf[i] < 126)) || (buf[i] == '\t')) {
            if (wordlen == 4) {
              putc(buf[i], stdout);
            } else if (wordlen == 3) {
              if (word_count > 0)
                printf("\n");
              word_count++;
              putc(word[0], stdout);
              putc(word[1], stdout);
              putc(word[2], stdout);
              putc(buf[i], stdout);
              wordlen++;
            } else {
              word[wordlen++] = buf[i];
            }
          } else {
            wordlen = 0;
          }
        }
      }
    } while (read > 0);

    if (argc > 1) {
      if (!strcmp(argv[1], "-")) {
      } else
        fclose(fin);
    }
  }

  return 0;
}
